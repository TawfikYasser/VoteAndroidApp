<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_gravity="right"
    android:id="@+id/members_card_item"
    app:cardElevation="6dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/member_icon"
            app:civ_border_width="0dp"
            android:layout_alignParentRight="true"
            android:cropToPadding="true"
            app:civ_border_color="@color/colorAccent"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:focusable="true"
            tools:targetApi="m" />
        <TextView
            android:id="@+id/user_card_name"
            android:layout_width="200dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="الأسم"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/user_image_item"
            android:fontFamily="@font/change_bold"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            />
        <TextView
            android:background="@drawable/typetextshape"
            android:id="@+id/user_card_type"
            android:textColor="@color/colorPrimary"
            android:layout_width="80dp"
            android:gravity="center"
            android:fontFamily="@font/change_bold"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_height="40dp"
            android:text="نوع الحساب"/>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>