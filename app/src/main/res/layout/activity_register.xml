<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.Register">
    <LinearLayout
        android:paddingTop="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="@font/change_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="إنشاء حساب"/>
        <TextView
            android:fontFamily="@font/change_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:text="قم بإنشاء حساب جديد للتمتع بجميع مزايا التطبيق"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="#E3E3E3"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="290dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            app:endIconDrawable="@drawable/ic_person_black_24dp"
            app:endIconMode="custom"
            app:endIconTint="@color/colorPrimary"
            app:hintTextColor="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="اسم المستخدم"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="290dp"
                android:fontFamily="@font/change_reg"
                android:id="@+id/username_et_reg"
                android:inputType="textPersonName"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:id="@+id/choose_user_img"
            app:icon="@drawable/ic_add_a_photo_black_24dp"
            android:text="اختار الصورة الشخصية"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="5dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="290dp"
            android:layout_gravity="center"
            app:endIconDrawable="@drawable/ic_email_black_24dp"
            app:endIconMode="custom"
            android:layout_margin="5dp"
            app:endIconTint="@color/colorPrimary"
            app:hintTextColor="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="البريد الإلكتروني"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="290dp"
                android:fontFamily="@font/change_reg"
                android:id="@+id/email_et_reg"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="290dp"
            android:layout_gravity="center"
            app:endIconDrawable="@drawable/ic_lock_black_24dp"
            app:endIconMode="custom"
            android:layout_margin="5dp"
            app:endIconTint="@color/colorPrimary"
            app:hintTextColor="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="كلمة المرور"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="290dp"
                android:id="@+id/password_et_reg"
                android:inputType="textPassword"
                android:fontFamily="@font/change_reg"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="290dp"
            android:layout_height="1dp"
            android:layout_gravity="center"

            android:layout_marginBottom="5dp"
            android:background="#E3E3E3"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="290dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:endIconDrawable="@drawable/ic_cake_black_24dp"
            app:endIconMode="custom"
            app:endIconTint="@color/colorPrimary"
            app:hintTextColor="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="العمر"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="290dp"
                android:fontFamily="@font/change_reg"
                android:id="@+id/age_reg"
                android:maxLength="2"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="290dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:endIconDrawable="@drawable/ic_perm_identity_black_24dp"
            app:endIconMode="custom"
            app:endIconTint="@color/colorPrimary"
            app:hintTextColor="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="رقم البطاقة الشخصية"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="290dp"
                android:fontFamily="@font/change_reg"
                android:id="@+id/id_num_reg"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="290dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="#E3E3E3"/>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            app:selectionRequired="true"
            android:layout_margin="5dp"
            app:singleSelection="true"
            android:id="@+id/toggle_btn"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button1"
                android:fontFamily="@font/change_reg"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عضو"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/button2"
                android:fontFamily="@font/change_reg"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نائب"
                style="?attr/materialButtonOutlinedStyle"
                />
            <Button
                android:id="@+id/button3"
                android:fontFamily="@font/change_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رئيس"
                style="?attr/materialButtonOutlinedStyle"
                />
        </com.google.android.material.button.MaterialButtonToggleGroup>
    <Button
        android:id="@+id/create_btn"
        android:layout_width="300dp"
        android:fontFamily="@font/change_bold"
        android:layout_margin="5dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="إنشاء الحساب"/>
        <Button
            android:id="@+id/already_have"
            android:layout_width="300dp"
            android:fontFamily="@font/change_bold"
            android:layout_margin="5dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="دخول"/>
    </LinearLayout>

</ScrollView>