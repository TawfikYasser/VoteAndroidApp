<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.Login">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="@font/change_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="تسجيل الدخول"/>
        <TextView
            android:fontFamily="@font/change_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:text="مرحباً بك مجدداً"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="#E3E3E3"/>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:indeterminate="true"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="290dp"
            android:layout_gravity="center"
            app:endIconDrawable="@drawable/ic_email_black_24dp"
            app:endIconMode="custom"
            android:layout_margin="5dp"
            app:endIconTint="@color/colorPrimary"
            app:hintTextColor="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="البريد الإلكتروني"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="290dp"
                android:fontFamily="@font/change_reg"
                android:id="@+id/email_et_login"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="290dp"
            android:layout_gravity="center"
            app:endIconDrawable="@drawable/ic_lock_black_24dp"
            app:endIconMode="custom"
            android:layout_margin="5dp"
            app:endIconTint="@color/colorPrimary"
            app:hintTextColor="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="كلمة المرور"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="290dp"
                android:id="@+id/password_et_login"
                android:inputType="textPassword"
                android:fontFamily="@font/change_reg"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="300dp"
            android:fontFamily="@font/change_bold"
            android:layout_margin="35dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="دخول"/>
        <Button
            android:id="@+id/dont_have"
            android:layout_width="300dp"
            android:fontFamily="@font/change_bold"
            android:layout_margin="5dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="إنشاء حساب"/>

    </LinearLayout>
</ScrollView>